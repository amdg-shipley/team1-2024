<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="icon" type="image/x-icon" href="favicon.ico">
    <title>Object Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="styles.css"> -->
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"> </script>
</head>
  <body style="background-image: url('https://www.zleague.gg/theportal/wp-content/uploads/2023/02/Showing-off-the-different-weapon-types-in-Apex-Legends-aspect-ratio-2-1.png');">
    <nav class="navbar navbar-expand-lg p-3" style="background-color:gray;">
      <div class="container-fluid">
          <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Menu
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/">Home</a></li>
            <li><a class="dropdown-item" href="/Create">Create</a></li>
          </ul>
      </div>
    </nav>
    <div class="mx-5 p-5">
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
          <h1 class="text-center" style="color: aliceblue;">Apex Guns</h1>
        </div>
        <div class="col-3"></div>
      </div>
    </div>
    <div class="m-5 p-5">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4"><h1 class="text-center" style="color: aliceblue;">Guns</h1></div>
            <div class="col-4"></div>
        </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Ammo</th>
                <th scope="col">Rarity</th>
                <th scope="col">Delete</th>
                <th scope="col">Update</th>
              </tr>
            </thead>
            <tbody id="makeupTable">
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i + 1 %></th>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].ammo %></td>
                        <td><%= data[i].rarity %></td>
                        <td><a href="/delete/<%= i %>" class="btn btn-danger">Delete</a></td>
                        <td><a href="/view/<%= i %>" class="btn btn-warning">Update</a></td>
                    </tr>
                <% } %>
            </tbody>
          </table>
    </div>
    <script type="text/javascript" src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>